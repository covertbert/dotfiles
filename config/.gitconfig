[include]
path = user.gitconfig
path = themes.gitconfig

[init]
defaultBranch = main

[core]
pager = delta

[interactive]
diffFilter = delta --color-only

[delta]
navigate = true # use n and N to move between diff sections
features = calochortus-lyallii

[merge]
conflictstyle = diff3

[diff]
colorMoved = default

[gpg]
program = /usr/local/bin/gpg

[commit]
gpgSign = true

[tag]
forceSignAnnotated = true

[push]
autoSetupRemote = true
default = current
